{
  "name": "clipwave",
  "version": "0.1.11",
  "description": "A React component for an interactive audio waveform",
  "author": "justinsilvestre",
  "license": "AGPL-3.0",
  "repository": "knowclip/clipwave",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "microbundle --no-compress --jsxImportSource react --globals react=React --jsx React.createElement",
    "start": "microbundle watch --no-compress --jsxImportSource react --globals react=React --jsx React.createElement",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 vitest",
    "test:watch": "vitest",
    "deploy": "gh-pages -d example/build",
    "example": "(cd example && npm install && npm start)",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@storybook/addon-essentials": "^8.3.3",
    "@storybook/addon-interactions": "^8.3.3",
    "@storybook/addon-links": "^8.3.3",
    "@storybook/addon-onboarding": "^8.3.3",
    "@storybook/blocks": "^8.3.3",
    "@storybook/react": "^8.3.3",
    "@storybook/react-vite": "^8.3.3",
    "@storybook/test": "^8.3.3",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.2",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "cross-env": "^7.0.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-storybook": "^0.8.0",
    "gh-pages": "^2.2.0",
    "jsdom": "^25.0.1",
    "microbundle": "^0.15.1",
    "microbundle-crl": "^0.13.11",
    "node-sass": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sass-embedded": "^1.79.3",
    "storybook": "^8.3.3",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier"
    ]
  }
}
